<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verification_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGlobal"
    tools:context="com.ribbons.activities.VerificationCodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:textSize="@dimen/font_larger"
        android:layout_marginBottom="@dimen/common_margin_twenty"
        android:layout_above="@+id/tv_verifyText"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="@string/verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="@dimen/common_margin_twenty"
        android:layout_marginLeft="@dimen/common_margin_twenty"
        android:layout_marginRight="@dimen/common_margin_twenty"
        android:id="@+id/tv_verifyText"
        android:layout_above="@+id/linear"
        android:layout_centerInParent="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorWhite"
        android:text="@string/type_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

           android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_box" />

            <android.support.v7.widget.AppCompatEditText
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_box" />

            <android.support.v7.widget.AppCompatEditText
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_box" />

            <android.support.v7.widget.AppCompatEditText
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_box" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
